# Supabase Configuration
# Copy this file to .env.local and fill in your Supabase credentials
# Get these values from your Supabase project settings: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Optional: Storage bucket name for hero images (defaults to 'hero-images' if not set)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=hero-images

# Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity Webhook Secret (for on-demand revalidation)
# Generate a random secret string and use the same value in Sanity webhook settings
SANITY_REVALIDATE_SECRET=your-webhook-secret